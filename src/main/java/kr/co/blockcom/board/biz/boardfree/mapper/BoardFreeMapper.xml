<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.blockcom.board.biz.boardfree.mapper.BoardFreeMapper">
    <select id="selectPost" parameterType="hashmap" resultType="kr.co.blockcom.board.vo.board.BoardFree">
	    SELECT
	       seq
	       ,parent_seq
	       ,category
	       ,writer
	       ,title
	       ,content
	       ,view_count
	       ,notice_flag
	       ,secret_flag
	       ,mod_date
	       ,reg_date   
	    FROM
	       board_free
	    WHERE
	       seq=#{seq}
	    AND
	       comment_flag='N'
	    AND
	       delete_flag='N'
    </select>

    <insert id="insertPost" parameterType="kr.co.blockcom.board.vo.board.BoardFree" useGeneratedKeys="true" keyProperty="seq" >
        INSERT INTO board_Free(
            category
            ,writer
            ,password
            ,title
            ,content
            ,comment_flag
            ,notice_flag
            ,secret_flag
            ,reg_date
        ) VALUES (
            #{category}
            ,#{writer}
            ,#{password}
            ,#{title}
            ,#{content}
            ,#{comment_flag}
            ,#{notice_flag}
            ,#{secret_flag}
            ,now() 
        )
    </insert>
</mapper>